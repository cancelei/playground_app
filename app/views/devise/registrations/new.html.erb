<div class="max-w-md mx-auto mt-8 mb-16">
  <h2 class="text-3xl font-bold text-center text-gray-800 mb-2">Join Playground</h2>
  <p class="text-center text-gray-600 mb-6">Create your account to start your language learning journey</p>
  
  <div class="bg-white p-8 rounded-lg shadow-md border border-gray-100">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
            </svg>
          </div>
          <%= f.text_field :name, autofocus: true, placeholder: "Full name", class: "shadow appearance-none border rounded w-full py-3 px-4 pl-10 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
            </svg>
          </div>
          <%= f.email_field :email, autocomplete: "email", placeholder: "your.email@example.com", class: "shadow appearance-none border rounded w-full py-3 px-4 pl-10 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <% if @minimum_password_length %>
        <span class="text-xs text-gray-600 mb-1 block">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Create a secure password", class: "shadow appearance-none border rounded w-full py-3 px-4 pl-10 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm your password", class: "shadow appearance-none border rounded w-full py-3 px-4 pl-10 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
      </div>
      
      <div class="mb-6 bg-gray-50 p-4 rounded-lg border border-gray-100">
        <h3 class="block text-gray-700 font-bold mb-3">Notification Preferences</h3>
        
        <div class="mb-2">
          <label class="flex items-center">
            <%= check_box_tag 'user[notification_preferences][email_updates]', 'true', true, class: "mr-2 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <span class="text-sm text-gray-700">Email updates about new features</span>
          </label>
        </div>
        
        <div class="mb-2">
          <label class="flex items-center">
            <%= check_box_tag 'user[notification_preferences][feature_announcements]', 'true', true, class: "mr-2 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <span class="text-sm text-gray-700">Feature announcements</span>
          </label>
        </div>
        
        <div class="mb-2">
          <label class="flex items-center">
            <%= check_box_tag 'user[notification_preferences][practice_reminders]', 'true', true, class: "mr-2 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <span class="text-sm text-gray-700">Practice reminders</span>
          </label>
        </div>
        
        <div class="mb-2">
          <label class="flex items-center">
            <%= check_box_tag 'user[notification_preferences][account_alerts]', 'true', true, class: "mr-2 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <span class="text-sm text-gray-700">Account status alerts</span>
          </label>
        </div>
      </div>

      <div class="mb-6 text-xs text-gray-500 text-center">
        By signing up, you agree to our <a href="#" class="text-blue-600 hover:underline">Terms of Service</a> and <a href="#" class="text-blue-600 hover:underline">Privacy Policy</a>.
      </div>
      
      <div class="mb-6 bg-yellow-50 p-4 rounded-lg border border-yellow-200 text-xs text-gray-700">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="font-medium mb-1">Important Account Policies</h3>
            <ul class="list-disc list-inside pl-1 space-y-1">
              <li>Accounts that remain inactive for <strong>30 consecutive days</strong> will be automatically deleted.</li>
              <li>You will receive email notifications before any automatic account deletion.</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="flex items-center justify-center">
        <%= f.submit "Create Account", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded focus:outline-none focus:shadow-outline transition duration-150 ease-in-out" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600">
        Already have an account? 
        <%= link_to "Log in", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-800" %>
      </p>
    </div>
  </div>
</div>
