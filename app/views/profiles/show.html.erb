<div class="max-w-3xl mx-auto mt-8 mb-16">
  <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Your Profile</h1>
  
  <div class="bg-white p-8 rounded-lg shadow-md">
    <div class="mb-8">
      <h2 class="text-xl font-semibold text-gray-700 mb-4">Account Information</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <p class="text-sm text-gray-500">Name</p>
          <p class="font-medium"><%= @user.name %></p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Email</p>
          <p class="font-medium"><%= @user.email %></p>
        </div>
      </div>
      <div class="mt-4">
        <%= link_to "Edit Account", edit_user_registration_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
      </div>
    </div>
    
    <div class="border-t border-gray-200 pt-6">
      <h2 class="text-xl font-semibold text-gray-700 mb-4">Notification Preferences</h2>
      
      <%= form_with(model: @user, url: update_notification_preferences_path, method: :patch) do |f| %>
        <div class="space-y-4">
          <div>
            <label class="flex items-center">
              <%= check_box_tag 'user[notification_preferences][email_updates]', 'true', @user.notification_preferences&.dig('email_updates'), class: "mr-2" %>
              <span class="text-gray-700">Email updates about new features</span>
            </label>
            <p class="text-sm text-gray-500 ml-6">Receive emails when we add new features to the platform.</p>
          </div>
          
          <div>
            <label class="flex items-center">
              <%= check_box_tag 'user[notification_preferences][feature_announcements]', 'true', @user.notification_preferences&.dig('feature_announcements'), class: "mr-2" %>
              <span class="text-gray-700">Feature announcements</span>
            </label>
            <p class="text-sm text-gray-500 ml-6">Get notified about new and upcoming features.</p>
          </div>
          
          <div>
            <label class="flex items-center">
              <%= check_box_tag 'user[notification_preferences][practice_reminders]', 'true', @user.notification_preferences&.dig('practice_reminders'), class: "mr-2" %>
              <span class="text-gray-700">Practice reminders</span>
            </label>
            <p class="text-sm text-gray-500 ml-6">Receive reminders to practice regularly.</p>
          </div>
        </div>
        
        <div class="mt-6">
          <%= f.submit "Save Preferences", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
